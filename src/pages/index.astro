---
import '../styles/main.css'

const heading = "Einbürgerungstest";
const subheading = "Prepare for the German Citizenship Exam with ease.";
const appIcon = "/images/app-icon.svg";
const appScreenshot = "/images/app-screenshot.png";

const badges = [
  {
    link: "https://apps.apple.com/app/idXXXXXXXX", // Replace with your app link
    image: "/images/app-store-badge.svg"
  }
];

const authors = [
  {
    name: "Evgenii Sukhanov",
    url: "mailto:support@einbuergerungstest.app"
  },
  {
    name: "Veronika",
    url: "mailto:support@einbuergerungstest.app"
  }
];

const pageTitle = "Einbürgerungstest App";
const favicon = "/images/favicon.svg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="container">
      <main>
        <div class="text-container">
          <img src={appIcon} class="app-icon" alt="App Icon" />
          <h1 class="heading">{heading}</h1>
          <h2 class="subheading">{subheading}</h2>
          <div class="features">
            <ul class="features-list">
              <li>✅ Official German citizenship test questions</li>
              <li>🌍 Multi-language support (German & Russian)</li>
              <li>📚 Detailed explanations for each question</li>
              <li>🎯 Smart practice modes and progress tracking</li>
              <li>⏱️ Test simulation with timer</li>
              <li>📱 Modern iOS native interface</li>
            </ul>
          </div>
          <div class="badge-container">
            {badges.map(badge => (
              <a href={badge.link} target="_blank">
                <img src={badge.image} class="badge" alt="Store Badge" />
              </a>
            ))}
          </div>
          <p class="authors">
            Made with ♥ by{" "}
            {authors.map((author, index) => (
              <span>
                {index > 0 ? (index === authors.length - 1 ? " and " : ", ") : ""}
                <a href={author.url} target="_blank">{author.name}</a>
              </span>
            ))}
          </p>
        </div>
        <div>
          <img src={appScreenshot} class="app-screenshot" alt="App Screenshot" />
        </div>
      </main>
			<footer class="footer">
				<p class="footer-links">
					<a href="/privacy-policy.html" target="_blank">Privacy Policy</a>
					<span class="divider">|</span>
					<a href="mailto:support@einbuergerungstest.app">Support</a>
				</p>
			</footer>
		</div>
	</body>
</html>
